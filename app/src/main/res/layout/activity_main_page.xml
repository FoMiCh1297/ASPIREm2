                android:layout_marginTop="150dp"
                android:layout_marginEnd="263.27dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/stars"
                app:layout_constraintBottom_toBottomOf="@+id/group2"
                app:layout_constraintEnd_toEndOf="@+id/group2"
                app:layout_constraintStart_toStartOf="@+id/group2"
                app:layout_constraintTop_toTopOf="@+id/group2" />

            <ToggleButton
                android:id="@+id/like2"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginStart="297dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="19.85dp"
                android:layout_marginBottom="19.7dp"
                android:text=""
                android:textOn=""
                android:textOff=""
                android:background="@drawable/change_like"
                app:layout_constraintBottom_toBottomOf="@+id/group2"
                app:layout_constraintEnd_toEndOf="@+id/group2"
                app:layout_constraintStart_toStartOf="@+id/group2"
                app:layout_constraintTop_toTopOf="@+id/group2" />

            <ImageView
                android:id="@+id/group3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_activity_main_page"
                android:layout_marginStart="16dp"
