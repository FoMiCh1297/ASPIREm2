                android:src="@drawable/stars"
                app:layout_constraintBottom_toBottomOf="@+id/group1"
                app:layout_constraintEnd_toEndOf="@+id/group1"
                app:layout_constraintStart_toStartOf="@+id/group1"
                app:layout_constraintTop_toTopOf="@+id/group1" />

            <ToggleButton
                android:id="@+id/like1"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginStart="297dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="19.85dp"
                android:layout_marginBottom="19.7dp"
                android:text=""
                android:textOn=""
                android:textOff=""
                android:background="@drawable/change_like"
                app:layout_constraintBottom_toBottomOf="@+id/group1"
                app:layout_constraintEnd_toEndOf="@+id/group1"
                app:layout_constraintStart_toStartOf="@+id/group1"
                app:layout_constraintTop_toTopOf="@+id/group1" />

            <ImageView
